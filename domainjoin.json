{
    "apiVersion": "2015-06-15",
    "type": "Microsoft.Compute/virtualMachines/extensions",
    "name": "[concat('$dnsLabelPrefix','/joindomain')]",
    "location": "$location",
    "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', '$dnsLabelPrefix')]"
    ],
    "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
            "Name": "$domainToJoin",
            "OUPath": "$ouPath",
            "User": "[concat('$domainToJoin', '\\', '$domainJoinUsername')]",
            "Restart": "true"
        },
        "protectedSettings": {
            "Password": "$domainJoinPassword"
        }
    }
}
